{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "isolatedModules": false,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "lib/"
    },
    "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2
    },
    "files": [
     "typings/main.d.ts",
     "src/custom-typings/main.d.ts",
      "src/index.ts"
   ],
    "exclude": [
        "node_modules"
    ]
}
